{% extends '::base_frontend.html.twig' %}

{% block body -%}


<header class="page-header">
  <div class="description">
    <p class="lead">
      <span>Selecciona una plantilla para agregar comentarios.</span>
    </p>
  </div>

  <div class="actions">
    <div class="btn-toolbar">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
            {{ flashMessage }}
            </div>
        {% endfor %}
    </div>
  </div>
</header>

<div class="description">
    <p class="lead"><strong>Descripci√≥n:</strong> <br/>{{ entity.description }}</p>
</div>


<div id="themes-show" class="isotope row">
    {% for theme in entity.themes %}
    <div class="theme item span3">
        <div class="well">
            <h4>
                <a href="#">{{  theme.name }}</a>
            </h4>
            <div class="info">
                <a href="#">
                    <img src="{{ asset( theme.getWebPath ) }}" alt="{{ theme.name }}" width="230"/>
                </a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>



<header class="page-header">
    <div class="description">
        <p class="lead">
            <span>Comentarios</span>
        </p>
    </div>
</header>

<form action="{{ path('front_comment_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    {{ form_label(form.description) }}
    {{ form_errors(form.description) }}
    {{ form_widget(form.description,{ 'attr': {'class': 'input-xxlarge'} }) }}
    <button type="submit" class="btn btn-success">Agregar</button>

    {{ form_widget(form._token) }}
</form>

<div  id="comments-show">
  {% for comment in entity.comments %}
    <blockquote>
    {{ comment.description }}
    </blockquote>
  {% endfor %}
</div>

<script>
    $(window).ready(function(){
      $themes = $('#themes-show');
      $filters_array = Array();

      $themes.imagesLoaded( function(){
        $themes.isotope({
          itemSelector : '.item',
          layoutMode : 'masonry',
        });
      });
    });
</script>


{% endblock %}