{% extends '::base_frontend.html.twig' %}

{% block body -%}

<div class="modal">
  <form action="{{ path('question_create_option_answer', { 'application_id': application_id,'theme_id': theme_id, 'question_id': question_id }) }}" method="post" {{ form_enctype(form) }} >
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Agregar Opción</h3>
  </div>
  <div class="modal-body">
    
    
    {{ form_label(form.answer, 'Opción') }}
    {{ form_widget(form.answer) }}
    {{ form_errors(form.answer) }}

    {{ form_rest(form) }}

  </div>
  <div class="modal-footer">
    <a href="{{ path('application_theme_comments', { 'id': application_id, 'theme_id': theme_id }) }}" class="btn">Cerrar</a>
    <button type="submit" class="btn btn-primary">Agregar</button>
  </div>
  </form>
</div>



{% endblock %}